@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/todo.css")" rel="stylesheet" type="text/css" />
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
	<script src ="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
	<script src="../../Scripts/underscore.js" type="text/javascript"></script>
    <script src="../../Scripts/backbone.js" type="text/javascript"></script>
	<script src="../../Scripts/todos.js" type="text/javascript"></script>
</head>
<body>
    <!-- Todo App Interface -->
 
    <div id="todoapp">

      <div class="title">
        <h1>Todos</h1>
      </div>

      <div class="content">
        <div id="todo-form"></div>
        <div id="todos">
        	<ul id="todo-list"></ul>
        </div>        
      </div>

    </div>
	
	<!-- Template -->
	<script type="text/template" id="formTemplate">
	<form id="todo-form">
		Type into the box and hit enter to add a todo:
		<input id="new-todo" placeholder="What needs to be done?" type="text" />
	</form>
	</script>

	<script type="text/template" id="item-template">
	   <div class="todo-content">${content}</div>
	</script>

</body>
</html>
